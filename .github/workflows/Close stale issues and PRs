name: "Close stale issues and PRs"

on:
  schedule:
    - cron: "0 0 * * *" # Runs daily at midnight
  workflow_dispatch:

jobs:
  stale:

    runs-on: ubuntu-latest
    permissions:
        actions: write
        contents: write # only for delete-branch option
        issues: write
        pull-requests: write
    steps:
      - uses: actions/stale@v9
        with:
          repo-token: ${{ secrets.GITHUB_TOKEN }}
          days-before-stale: 30
          days-before-close: 7
          stale-issue-message: "This issue has been automatically marked as stale because it has not had activity in 30 days. It will be closed if no further activity occurs."
          stale-pr-message: "This pull request has been automatically marked as stale due to inactivity. It will be closed if no further activity occurs."
          exempt-issue-labels: "pinned,security"
          exempt-pr-labels: "work-in-progress"
